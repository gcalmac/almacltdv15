<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="shipstation_delivery_carrier_form_view_ept" model="ir.ui.view">
            <field name="name">ShipStation Delivery Carrier</field>
            <field name="model">delivery.carrier</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <field name="integration_level" position="after">
                    <field name="shipstation_instance_id"
                           attrs="{'invisible':[('delivery_type', 'in', ('fixed','base_on_rule'))]}" context="{'form_view_ref': 'shipstation_ept.shipstation_form_view'}"/>
                    <field name="shipstation_carrier_code"/>
                </field>
                <xpath expr="//page[@name='destination']" position='before'>
                    <page string="ShipStation Configuration" name="shipstation_configuration"
                          attrs="{'invisible': [('delivery_type', '!=', 'shipstation_ept')]}">
                        <group>
                            <group>
                                <field name="get_cheapest_rates"/>
                                <field name="shipstation_carrier_id"
                                       domain="[('shipstation_instance_id','=',shipstation_instance_id)]"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation_ept'), ('get_cheapest_rates', '=', False)], 'invisible': [('get_cheapest_rates', '=', True)]}"
                                       options="{'no_create':True}"/>
                                <field name="shipstation_service_id"
                                       attrs="{'required': [('get_cheapest_rates', '=', False),('delivery_type', '=', 'shipstation_ept')], 'invisible': [('get_cheapest_rates', '=', True)]}"
                                       domain="[('shipstation_instance_id','=',shipstation_instance_id),('shipstation_carrier_id','=',shipstation_carrier_id)]"/>
				                <field name="shipstation_carrier_ids"
                                       domain="[('shipstation_instance_id','=',shipstation_instance_id)]"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation_ept'), ('get_cheapest_rates', '=', True)], 'invisible': [('get_cheapest_rates', '=', False)]}"
                                       widget="many2many_tags"
                                       options="{'no_create':True}"/>
                                <field name="shipstation_service_ids"
                                       attrs="{'invisible': [('get_cheapest_rates', '=', False)]}"
                                       widget="many2many_tags"
                                       domain="[('shipstation_instance_id','=',shipstation_instance_id), ('shipstation_carrier_id','in',shipstation_carrier_ids)]"/>
                                <field name="confirmation"/>
                                <field name="shipstation_package_id"
                                       domain="[('shipstation_instance_id','=',shipstation_instance_id),('shipstation_carrier_id','=',shipstation_carrier_id)]"
                                       attrs="{'required': [('get_cheapest_rates', '=',False),('delivery_type', '=', 'shipstation_ept')]}"/>
                                <field name="package_unit_default"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation_ept')]}"/>
                                <field name="shipstation_weight_uom"
                                       attrs="{'required': [('delivery_type', '=', 'shipstation_ept'),('delivery_type', '=', 'shipstation_ept')]}"/>
                                <field name="shipstation_weight_uom_id" invisible="1"
                                       domain="[('category_id','=',2)]" edit="0" create="0"/>
                            </group>
                            <group>
                                <field name="shipstation_user_id"/>
                                <field name="shipstation_auto_create_batch"
                                       attrs="{'invisible':[('delivery_type', 'in', ('fixed','base_on_rule'))]}"/>
                                <field name="shipstation_batch_limit"
                                       attrs="{'invisible':[('shipstation_auto_create_batch','=',False),('delivery_type', 'in', ('fixed','base_on_rule'))]}"/>
                                <field name="shipstation_auto_done_pickings"
                                       attrs="{'invisible':[('shipstation_batch_limit', '=',False)]}"/>
                                <field name="shipstation_use_existing_batch_cronjob"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
