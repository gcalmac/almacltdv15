<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="shipstation_services_ept_form_view" model="ir.ui.view">
            <field name="name">shipstation.services.ept.form</field>
            <field name="model">shipstation.services.ept</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <group>
                        <field name="service_name"/>
                        <field name="service_code"/>
                        <field name="shipstation_carrier_id"/>
                        <field name="service_type"/>
                        <field name="shipstation_instance_id" required="1" context="{'form_view_ref': 'shipstation_ept.shipstation_form_view'}"/>
                        <field name="company_id"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>