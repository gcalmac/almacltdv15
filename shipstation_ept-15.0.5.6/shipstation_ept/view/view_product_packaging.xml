<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipstation_product_packaging" model="ir.ui.view">
        <field name="name">Product Packaging View</field>
        <field name="model">product.packaging</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='group_product']" position="inside">
                    <field name="package_carrier_type"/>
                    <field name="shipstation_carrier_id" invisible="1"/>
                    <field name="shipper_package_code"
                           attrs="{'invisible':[('package_carrier_type','!=','shipstation_ept')]}"/>
<!--                    Method modified by: Hardik Joshi on 08-06-2022-->
<!--        Modification: add following fields to view-->
<!--        Task No. and Description: 192229 - Pass package dimension to ShipStation-->
                    <field name="shipstation_carrier_id"/>
                    <field name="height"/>
                    <field name="width"/>
                    <field name="packaging_length"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>