<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_shipstation_shipment_tracking_ept" model="mail.template">
            <field name="name">Shipstation Shipment Tracking Email Template</field>
            <field name="email_from">
                {{ (object.env.user.email and '%s &lt;%s&gt;' % (object.env.user.name, object.env.user.email) or '')}}
            </field>
            <field name="subject">We've shipped your order. Tracking details inside.</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <p>Hello
                        <t t-if="object.partner_id">
                            <t t-out="object.partner_id.name or ''"/>
                        </t>
                        ,
                    </p>
                    <p>Thank you for your purchase from
                        <t t-if="object.company_id">
                            <t t-out="object.company_id.name or ''"/>
                        </t>
                        .
                    </p>
                    <p style="margin: 0px; padding: 2px 14px; font-size: 14px;">
                        <strong>REFERENCES</strong>
                        <br/>
                        <b>Order no.</b>|
                        <t t-if="object.origin">
                            <t t-out="object.origin or ''"/>
                        </t>
                        <br/>
                        <br/>
                        <t t-if="object.carrier_id and object.carrier_tracking_ref">
                            <br/>
                            <a href="{{ (ctx['tracking_link']) }}" target="_blank"
                               style="background-color: #8E0000; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;"
                               class="o_default_snippet_text">TRACK MY ORDER
                            </a>
                            <br/>
                            <br/>
                        </t>
                    </p>

                    <p>If you have any question, do not hesitate to contact us.</p>
                    <p>Thank you for choosing
                        <t t-if="object.company_id">
                            <t t-out="object.company_id.name or ''"/>
                        </t>
                        !
                    </p>
                    <br/>
                    <div style="width: 430px; margin: 0px; padding: 0px; background-color: #8E0000; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
                        <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
                            <strong style="text-transform:uppercase;">
                                <t t-if="object.company_id">
                                    <t t-out="object.company_id.name or ''"/>
                                </t>
                            </strong>
                        </h3>
                    </div>
                    <div style="width: 400px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
                        <span style="color: #222; margin-bottom: 5px; display: block; ">
                            <t t-if="object.company_id.street">
                                <t t-out="object.company_id.street or ''"/>
                            </t>
                            <t t-if="object.company_id.street2">
                                <br/>
                                <t t-out="object.company_id.street2 or ''"/>
                            </t>
                            <br/>
                            <t t-if="object.company_id.city">
                                <t t-out="object.company_id.zip or ''"/>
                                <t t-out="object.company_id.city or ''"/>
                            </t>
                            <t t-if="object.company_id.country_id">
                                <br/>
                                <t t-out="object.company_id.state_id.name or ''"/>
                                <t t-out="object.company_id.country_id.name or ''"/>
                            </t>
                            <br/>
                        </span>
                        <t t-if="object.company_id.phone">
                            <div style="margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px; padding-top: 0px; padding-right: 0px; padding-bottom: 0px; padding-left: 0px; ">
                                Phone:
                                <t t-out="object.company_id.phone or ''"/>
                            </div>
                        </t>
                        <t t-if="object.company_id.email">
                            <div style="margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px; padding-top: 0px; padding-right: 0px; padding-bottom: 0px; padding-left: 0px; ">
                                Email:
                                <t t-out="object.company_id.email or ''"/>
                            </div>
                        </t>
                        <t t-if="object.company_id.website">
                            <div>
                                Web :
                                <a href="{{ object.company_id.website }}">
                                    <t t-out="object.company_id.website or ''"/>
                                </a>
                            </div>
                        </t>
                        <p></p>
                    </div>
                </div>
            </field>
        </record>

    </data>
</odoo>
