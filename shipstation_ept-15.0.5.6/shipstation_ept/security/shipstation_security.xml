<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_shipstation_ept">
            <field name="name">ShipStation</field>
            <field name="description">Helps you handle your shipstation accounts</field>
            <field name="sequence">59</field>
        </record>

        <record model="res.groups" id="group_shipstation_user">
            <field name="name">User</field>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="shipstation_ept.module_shipstation_ept"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="res.groups" id="group_shipstation_manager">
            <field name="name">Manager</field>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="shipstation_ept.module_shipstation_ept"/>
            <field name="implied_ids" eval="[(4,ref('group_shipstation_user')),(4,ref('stock.group_stock_manager'))]"/>
        </record>

        <record model="ir.rule" id="shipstation_marketplace_comp_rule">
            <field name="name">ShipStation Marketplace multi-company</field>
            <field name="model_id" ref="model_shipstation_marketplace_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.rule" id="shipstation_store_comp_rule">
            <field name="name">ShipStation Store multi-company</field>
            <field name="model_id" ref="model_shipstation_store_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.rule" id="shipstation_carrier_comp_rule">
            <field name="name">ShipStation Carrier multi-company</field>
            <field name="model_id" ref="model_shipstation_carrier_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.rule" id="shipstation_service_comp_rule">
            <field name="name">ShipStation Service multi-company</field>
            <field name="model_id" ref="model_shipstation_services_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.rule" id="shipstation_warehouse_comp_rule">
            <field name="name">ShipStation Warehouse multi-company</field>
            <field name="model_id" ref="model_shipstation_warehouse_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.rule" id="shipstation_product_comp_rule">
            <field name="name">ShipStation Product multi-company</field>
            <field name="model_id" ref="model_shipstation_product_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('shipstation_instance_id.company_id', '=', False),
                ('shipstation_instance_id.company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.rule" id="shipstation_instance_comp_rule">
            <field name="name">ShipStation Instance multi-company</field>
            <field name="model_id" ref="model_shipstation_instance_ept"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]
            </field>
        </record>
    </data>
</odoo>